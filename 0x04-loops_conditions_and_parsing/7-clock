#!/usr/bin/env bash
# the 12 hours clock print

Hour=0
minutes=1
echo "Hour: $Hour"
while [ $Hour -lt 13 ]
do
   if [ $Hour -eq 13 ]
   then
      break
   elif [ $minutes -gt 59 ]
   then
      ((Hour++))
      echo "Hour: $Hour"
      ((minutes = 1))
   else
      echo "$minutes"
      ((minutes++))
   fi
done
